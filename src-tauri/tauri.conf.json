{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Floatlearn",
    "version": "0.1.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.simonkelly.floatlearn",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "Floatlearn",
        "width": 450,
        "height": 220,
        "minWidth": 300,
        "minHeight": 150,
        "maxWidth": 800,
        "maxHeight": 400,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "visible": true,
        "skipTaskbar": true,
        "focus": false,
        "acceptFirstMouse": true,
        "hiddenTitle": true
      },
      {
        "label": "settings",
        "title": "Floatlearn Settings",
        "width": 400,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": false,
        "url": "/#/settings",
        "skipTaskbar": true
      }
    ]
  }
}
